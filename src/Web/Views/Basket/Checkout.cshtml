@model CheckoutViewModel
@{
    ViewData["Title"] = "Ödeme";
}
<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-4">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Alışveriş Sepeti</a></li>
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ödeme</a></li>
            </ol>
        </div><!-- End .container -->
    </nav>
    <div class="container">
        <h1 class="mt-5">ÖDEME</h1>
        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Sepet</span>
                    <span class="badge badge-secondary badge-pill">@Model.BasketItems.Count</span>
                </h4>
                <ul class="list-group mb-3">
                    @foreach (var item in Model.BasketItems)
                    {
        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0">@item.ProductName</h6>
                <small class="text-muted">x@(item.Quantity)</small>
            </div>
            <span class="text-muted">@item.Price.ToString("c2")</span>
        </li>            }
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Toplam </span>
                        <strong>@Model.TotalPrice().ToString("c2")</strong>
                    </li>
                </ul>
            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Teslimat Adresi</h4>
                <form method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label asp-for="Street">Adres</label>
                        <input asp-for="Street" type="text" class="form-control" placeholder="adresinizi giriniz..." required>
                        <span asp-validation-for="Street"></span>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label asp-for="Country">Ülke</label>
                            <div class="select-custom">
                                <select asp-for="Country" class="form-control">
                                    <option value="TR">Türkiye</option>
                                    <option value="ABD">ABD</option>
                                </select>
                                <span asp-validation-for="Country"></span>
                            </div><!-- End .select-custom -->
                        </div>
                        <div class="form-group">
                            <label asp-for="State">Şehir</label>
                            <div class="select-custom">
                                <select asp-for="State" class="form-control">
                                    <option value="AN">Ankara</option>
                                    <option value="NYC">NewYork</option>
                                </select>
                                <span asp-validation-for="State"></span>
                            </div><!-- End .select-custom -->
                        </div>
                        <div class="form-group">
                            <label asp-for="City">Ülke</label>
                            <div class="select-custom">
                                <select asp-for="City" class="form-control">
                                    <option value="TR">Çankaya</option>
                                    <option value="NYC">Times</option>
                                </select>
                                <span asp-validation-for="City"></span>
                            </div><!-- End .select-custom -->
                        </div>

                        <div class="col-md-2 mb-3">
                            <label asp-for="ZipCode">Posta Kodu</label>
                            <input asp-for="ZipCode" type="text" class="form-control" placeholder="Posta kodunuzu giriniz..." required>
                            <span asp-validation-for="ZipCode"></span>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <h4 class="mb-3">Ödeme</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CCHolderName">Kart Sahibi</label>
                            <input asp-for="CCHolderName" type="text" class="form-control" placeholder="">
                            <small class="text-muted">Kartın üzerinde görünen tam ad</small>
                            <span asp-validation-for="CCHolderName"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CCNumber">Kart Numarası</label>
                            <input asp-for="CCNumber" type="text" class="form-control" placeholder="">
                            <span asp-validation-for="CCNumber"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label asp-for="CCExpiration">Son Kullanma Tarihi</label>
                            <input asp-for="CCExpiration" type="text" class="form-control" placeholder="">
                            <span asp-validation-for="CCExpiration"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="CCCvv">CVV</label>
                            <input asp-for="CCCvv" type="text" class="form-control" placeholder="Arka yüzdeki son 3 numarayı giriniz...">
                            <span asp-validation-for="CCCvv"></span>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-info" type="submit">Ödemeyi Tamamla</button>
                </form>
            </div>
        </div>

    </div>
</main>